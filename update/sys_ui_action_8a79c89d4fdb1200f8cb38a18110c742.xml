        <script><![CDATA[(function(reservation){
	'use strict';
	function getGuest(reservation){
		var guestReservation = new GlideRecord('x_40661_hotel_m2m_guests_reservations');
		guestReservation.addQuery('reservation', reservation.sys_id.toString());
		guestReservation.query();
		guestReservation.setLimit(1);
		guestReservation.orderByDesc('lead');
		if(guestReservation.next()){
			return guestReservation.guest;
		} else {
			return null;
		}
	}
	
	var guest = getGuest(reservation);
	if(guest){
		var checkIn = new GlideRecord('x_40661_hotel_check_in');
		checkIn.newRecord();
		checkIn.date = new GlideDate();
		checkIn.guest = guest;
		checkIn.room = reservation.room;
		checkIn.comments = 'Autogenerated checkin from reservation';
		checkIn.update();
		action.setRedirectURL(checkIn);
	} else {
		gs.addErrorMessage('Could not find guest to create check-in');
		action.setRedirectURL(reservation);
	}
})(current);]]></script>
